---
import "../styles/global.css";
const SITE_KEY = import.meta.env.PUBLIC_RECAPTCHA_SITE_KEY;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Instrument+Sans:ital,wght@0,400..700;1,400..700&family=Josefin+Slab:ital,wght@0,100..700;1,100..700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>PDF Craft</title>
    <meta
      name="google-site-verification"
      content="RTymfG9lAPowVx8zPgKlrhrccN8Ysk_Mbc7Kp_hfDUA"
    />
    <script
      src={`https://www.google.com/recaptcha/api.js?render=${SITE_KEY}`}
      defer></script>
  </head>
  <body>
    <div class="app">
      <slot />
    </div>
  </body>
</html>
